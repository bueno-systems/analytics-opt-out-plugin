{
  "compilerOptions": {
    /* ESM */
    "moduleResolution": "node",
    "target": "es2019",
    "module": "ES6",

    /* Build */
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,

    /* Checks */
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
